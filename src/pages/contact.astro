---
import Layout from '../components/Layout.astro';
---

<Layout title="Contact Us - Gique">
  <div class="max-w-2xl mx-auto text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Contact</h1>
    <p class="text-xl text-gray-700 mb-8">
      For questions about our past programs or STEAM education resources, feel free to reach out.
    </p>

    <div class="bg-blue-50 rounded-lg p-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4">Email</h2>
      <a href="mailto:hello@gique.me" class="text-2xl text-blue-600 hover:text-blue-700 font-medium">
        hello@gique.me
      </a>
    </div>
  </div>
</Layout>
