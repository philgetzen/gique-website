---
import Layout from '../components/Layout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('pages', 'about-us');
const { Content } = await entry.render();
---

<Layout title="About Us - Gique">
  <article class="prose prose-lg prose-headings:text-gray-900 prose-a:text-blue-600 max-w-none">
    <!-- Custom styling for better photo layouts -->
    <style>
      article img {
        max-width: 300px;
        height: auto;
        margin: 1.5rem auto;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      }

      /* Team member photos - make them consistent circles */
      article h2 + p > a > img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 50%;
        display: block;
        margin: 1rem auto;
      }

      /* Intern photos */
      article h2:contains("Past Interns") ~ p > img,
      article h2 + img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 50%;
        display: block;
        margin: 1rem auto;
      }
    </style>
    <Content />
  </article>
</Layout>
