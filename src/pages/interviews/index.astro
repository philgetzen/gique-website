---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';

const interviews = await getCollection('interviews');

// Map of profile images for each interview (using local images)
const profileImages: Record<string, string> = {
  'ashli-davis': '/images/interviews/profiles/ashli-davis.jpg',
  'daniel-parker': '/images/interviews/profiles/daniel-parker.jpg',
  'danielle-williams': '/images/interviews/profiles/danielle-williams.jpg',
  'dario-gd': '/images/interviews/profiles/dario-gd.jpg',
  'eleanor-lutz': '/images/interviews/profiles/eleanor-lutz.jpg',
  'emma-feshbach': '/images/interviews/profiles/emma-feshbach.jpg',
  'jacob-cramer': '/images/interviews/profiles/jacob-cramer.jpg',
  'joel-sanchez': '/images/interviews/profiles/joel-sanchez.jpg',
  'kevin-ferreira': '/images/interviews/profiles/kevin-ferreira.jpg',
  'kristina-hagman': '/images/interviews/profiles/kristina-hagman.jpg',
  'lily-barrett': '/images/interviews/profiles/lily-barrett.jpg',
  'lisie-michel': '/images/interviews/profiles/lisie-michel.jpg',
  'megan-cox': '/images/interviews/profiles/megan-cox.jpg',
  'mitali-kini': '/images/interviews/profiles/mitali-kini.jpg',
  'mitch-gaynor': '/images/interviews/profiles/mitch-gaynor.jpg',
  'niharika-vattikonda': '/images/interviews/profiles/niharika-vattikonda.jpg',
  'owen-beane': '/images/interviews/profiles/owen-beane.jpg',
  'phillip-daniel': '/images/interviews/profiles/phillip-daniel.jpg',
  'project-codet': '/images/interviews/profiles/project-codet.jpg',
  'sam-nicaise': '/images/interviews/profiles/sam-nicaise.jpg',
  'sara-molcan': '/images/interviews/profiles/sara-molcan.jpg',
  'shantell-martin': '/images/interviews/profiles/shantell-martin.jpg',
  'suelin-chen': '/images/interviews/profiles/suelin-chen.jpg',
  'susan-israel': '/images/interviews/profiles/susan-israel.jpg',
  'zach-lanoue': '/images/interviews/profiles/zach-lanoue.jpg',
};
---

<Layout title="Interviews - Gique">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-900 mb-8 text-center">Interviews with Giques</h1>

    <div class="prose prose-lg max-w-none mb-12">
      <p class="text-lg text-gray-700 leading-relaxed">
        An <strong>eight-year-old who began coding animations</strong> to recreate her favorite fairy tales grows up to start a computer science education nonprofit while still in high school. A <strong>painter whose figurative abstractions are informed by the neuroscience of memory</strong> preservation. An <strong>entrepreneur repositioning death</strong> in our lives and culture using a web app. <strong>New York's "coolest it girl"</strong> evoking her signature freeform line drawings to transform printed circuit boards into storyboards. A <strong>piercer treading between the art of precision and biology of healing</strong>.
      </p>

      <p class="text-lg text-gray-700 leading-relaxed mt-6">
        These are just some of the people featured in our interview series who put the message of Gique into practice every day. Even though they are incredibly busy driving innovations and opening up new conversations in our society, they took the time to discuss their experiences as Giques. We invite you to take in their wisdom and be inspired <strong>"to push the envelope of experience."</strong>
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {interviews
        .sort((a, b) => a.data.title.localeCompare(b.data.title))
        .map(interview => (
        <a href={`/interviews/${interview.slug}`}
           class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-xl transition-all group">
          {profileImages[interview.slug] ? (
            <div class="aspect-square overflow-hidden bg-gray-100">
              <img
                src={profileImages[interview.slug]}
                alt={interview.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
          ) : (
            <div class="aspect-square bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center">
              <span class="text-4xl font-bold text-gray-400">{interview.data.title.charAt(0)}</span>
            </div>
          )}
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
              {interview.data.title}
            </h3>
            <p class="text-blue-600 font-medium group-hover:text-blue-700">
              Read interview â†’
            </p>
          </div>
        </a>
      ))}
    </div>

    <div class="bg-blue-50 rounded-lg p-8 text-center">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4">Future Interviews</h2>
      <p class="text-gray-700 mb-6">
        Know someone who embodies the Gique spirit and would be perfect for our interview series? We'd love to hear from you!
      </p>
      <a href="mailto:hello@gique.me"
         class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-3 rounded-lg transition-colors">
        Suggest an interviewee
      </a>
    </div>
  </div>
</Layout>
